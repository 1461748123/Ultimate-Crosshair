{
  "manifest_version":"1",
  "type":"WebApp",
  "meta":{
    "name":"Ultimate Crosshair",
    "version":"1.2.0",
    "minimum-overwolf-version": "0.77.4.0",
    "author":"Tj Gienger",
    "icon":"files/images/IconMouseOver.png",
    "icon_gray":"files/images/IconMouseNormal.png",
    "description":"Crosshair Overlay"
  },
  "data": {
    "start_window":"MainWindow",
    "windows":{
      "MainWindow":{
        "file":"files/index.html",
        "transparent":true,
        "resizable":false,
        "show_in_taskbar": false,
        "in_game_only": true,
        "size": {
          "width": 1024,
          "height": 768
        },
        "start_position": {
          "Top": 0,
          "Left": 0
        }
      }
    },
    "hotkeys": {
      "main": {
        "title": "Ultimate Crosshair",
        "action-type": "toggle",
        "default": "CTRL+ALT+C"
      }
    },
    "plugins": [
      "npOverwolfSamplePlugin.dll"
    ]
  }
}
