{
  "manifest_version":"1",
  "type":"WebApp",
  "meta":{
    "name":"Ultimate Crosshair",
    "version":"0.1.0",
    "minimum-overwolf-version": "0.77.4.0",
    "author":"Tj Gienger",
    "icon":"src/images/IconMouseOver.png",
    "icon_gray":"src/images/IconMouseNormal.png",
    "description":"Crosshair Overlay"
  },
  "data": {
    "start_window":"MainWindow",
    "windows":{
      "MainWindow":{
        "file":"index.html",
        "transparent":true,
        "resizable":false,
        "show_in_taskbar": true,
        "in_game_only": false,
        "size": {
          "width": 500,
          "height": 300
        }
      }
    },
    "hotkeys": {
      "main": {
        "title": "Ultimate Crosshair",
        "action-type": "toggle",
        "default": "CTRL+ALT+C"
      }
    },
    "plugins": [
      "npOverwolfSamplePlugin.dll"
    ]
  }
}